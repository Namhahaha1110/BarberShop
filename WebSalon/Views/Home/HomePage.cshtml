 <body>
     <section id="banner">
         <div class="container-fluid banner-text">
             <h1>BARBER SHOP</h1>
             <p>HỆ THỐNG BARBER SHOP HÀNG ĐẦU</p>
             <div class="banner-btn">
                 <a href="~/Home/ĐặtLịch"><span></span>Đặt lịch</a>
                 <a href="#"><span></span>Dịch vụ</a>
             </div>
         </div>
     </section>
     <!--code about us-->
     <section id="aboutus">
         <div class="title-text">
             <p>GIỚI THIỆU</p>

         </div>
         <div class="container-fluid aboutus-box">
             <div class="aboutus">
                 <h1>Nhân viên chuyên nghiệp</h1>
                 <div class="aboutus-desc">
                     <div class="aboutus-icon">
                         <i class="fas fa-shield-alt"></i>
                     </div>
                     <div class="aboutus-text">
                         <p>Đội ngũ nhân viên chuyên nghiệp, nhiệt huyết</p>
                     </div>
                 </div>


                 <div class="aboutus">
                     <h1>Hỗ trợ đặt lịch</h1>
                     <div class="aboutus-desc">
                         <div class="aboutus-icon">
                             <i class="fas fa-phone"></i>
                         </div>
                         <div class="aboutus-text">
                             <p>Hẹn lịch cắt tóc bất cứ khi nào bạn rảnh</p>
                         </div>
                     </div>
                 </div>

                 <div class="aboutus">
                     <h1>Giá cả hợp lý</h1>
                     <div class="aboutus-desc">
                         <div class="aboutus-icon">
                             <i class="fas fa-check"></i>
                         </div>
                         <div class="aboutus-text">
                             <p>Trải nghiệm hàng loạt dịch vụ hấp dẫn với số tiền hợp lý</p>
                         </div>
                     </div>
                 </div>
             </div>
             <div class="aboutus-img">
                 <img src="~/Images/barber-man.jpg" />
             </div>
         </div>
     </section>
     <!--code about us-->
